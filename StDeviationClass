package com.company;

import static com.company.ProjConstants.*;

/**
 * Created by 04585CUT on 23/02/2018.
 */

public class StDeviation {

    private int[] Data = new int[MAXDATA];
    private int itemCount = 0;

    private double sdAve = INVALID;
    private double sdVar = INVALID;
    private double sdDev = INVALID;

    public void reset(){

        for(int i = 0; i < MAXDATA; i++) {

            Data[itemCount] = INVALID;
        }
        itemCount = INVALID;

        sdAve = INVALID;
        sdVar = INVALID;
        sdDev = INVALID;

    }//end method

    public void addNewDataItem(int dataItem){

        Data[itemCount] = dataItem;
        itemCount++;

    }//end method

    public int getNumberOfDataItems(){

        return itemCount;

    }//end method

    public double calcAverage(){

        int total = 0;

        for(int i = 0; i < itemCount; i++) {

            total += Data[i];
        }

        sdAve = total / itemCount;

        return sdAve;

    }//end method

    public double calcVariance(){

        double Diff = 0;
        double Sq = 0;
        double Total = 0;

        for(int i = 0; i < itemCount; i++) {

            Diff = Data[i] - sdAve;
            Sq = Math.pow(Diff,2);
            Total = Total + Sq;

        }

        sdVar = Total / itemCount;

        return sdVar;

    }//end method

    public double calcStandardDeviation(){

        sdDev = Math.sqrt(sdVar);

        return sdDev;

    }//end method

}//end class
